<script>
  $( document ).on('ready page:load', function () {
      $("#notice").delay(3000).fadeOut("slow");
  });
</script>
<script>
$(document).ready(function(){
    $("#pengiriman").click(function(){
        $("#formpengiriman").delay(500).fadeIn(1000);
        $("#edittoko").fadeOut(500);
        $("#formpembayaran").fadeOut(500);
        $("#pengiriman").addClass("activeli");
        $("#infotoko").removeClass("activeli");
        $("#pembayarantoko").removeClass("activeli");
    });
    $("#infotoko").click(function(){
          $("#edittoko").delay(500).fadeIn(1000);
          $("#formpengiriman").fadeOut(500);
          $("#formpembayaran").fadeOut(500);
          $("#pengiriman").removeClass("activeli");
          $("#infotoko").addClass("activeli");
          $("#pembayarantoko").removeClass("activeli");
      });
      $("#pembayarantoko").click(function(){
          $("#formpembayaran").delay(500).fadeIn(1000);
          $("#formpengiriman").fadeOut(500);
          $("#edittoko").fadeOut(500);
          $("#pengiriman").removeClass("activeli");
          $("#infotoko").removeClass("activeli");
          $("#pembayarantoko").addClass("activeli");
      });

});
</script>
<script>
    $('.provinsi option[value=<%=params[:provinsi]%>]').attr('selected','selected');
    $('.kota option[value=<%=params[:kota]%>]').attr('selected','selected');
</script>
<script>
$(document).on('ready page:load', function () {
  $('.kecamatan').bind("keyup change", function(){

        var a = $('.provinsi option:selected').text();
        var b = $('.kota option:selected').text();
        var c = $('.kecamatan option:selected').text();
        $('#toko_provinsi_sebagai').val(a);
        $('#toko_kota_sebagai').val(b);
        $('#toko_kecamatan_sebagai').val(c);
    });
});
</script>
<script>
$(document).on('ready page:load', function () {
$( "input" ).hover(function() {

        var a = $('.provinsi option:selected').text();
        var b = $('.kota option:selected').text();
        var c = $('.kecamatan option:selected').text();
        $('#toko_provinsi_sebagai').val(a);
        $('#toko_kota_sebagai').val(b);
        $('#toko_kecamatan_sebagai').val(c);
    });
});
</script>
<script>
$(document).on('ready page:load', function () {
  $('.provinsi, .kota').bind("keyup change", function(){
        var newurl = "/toko/<%= params[:id] %>" + '/edit/' + $('.provinsi').val() <% if @cit %>+ "/" + $('.kota').val()<% end %>;
        Turbolinks.visit(newurl);
});
  });
</script>
<% else %>
<script>
$(document).on('ready page:load', function () {
        window.location = "/";
});
</script>
<% end %>
