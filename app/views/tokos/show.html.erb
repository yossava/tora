    <%= render 'layouts/torakoheader' %>
		<div class="columns-container">
      <div class="store-image"><%= image_tag @toko.banner1.url, style: "width:100%;" %></div>
      <div class="store-info-lapse">
        <div class="title_toko"><%= @toko.nama_toko %>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star" aria-hidden="true"></i>
          <i class="fa fa-star-o" aria-hidden="true"></i>
        </div>
        <label class="slogan"><%= @toko.slogan %></label>
        <div class="store-right">
          <ul>
            <li><i class="fa fa-home" aria-hidden="true"></i><%= @toko.user.created_at.in_time_zone("Jakarta").strftime("%d %B %Y") %></li>
            <li><i class="fa fa-clock-o" aria-hidden="true"></i><%= time_ago_in_words(@toko.user.last_sign_in_at) %> ago</li>
            <li><i class="fa fa-shopping-cart" aria-hidden="true"></i><%= @toko.user.cart.count %></li>
            <li><i class="fa fa-map-marker" aria-hidden="true"></i><%= @toko.kota_sebagai %></li>
          </ul>
        </div>
      </div>
			<div class="store-pic"><img src="<%= @toko.toko_image.url %>"></div>
      <div class="store-desc">
        <span class="store-quote"><i class="fa fa-quote-left"></i> <%= @toko.deskripsi %></span>
        <% if current_user.id == @toko.user_id %>
					<a href="<%= edit_toko_path %>" class="label label-danger store-setting"><i class="fa fa-cog"></i> Setting</a>
        <% end %>
        <div class="store-share">
          <p class="store-share-link">Share Link:</p>
          <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=<%= url_for(:only_path => false) %>"><i class="fa fa-facebook-square"></i></a>
          <a target="_blank" href="https://twitter.com/home?status=<%= url_for(:only_path => false) %>"><i class="fa fa-twitter-square"></i></a>
          <a target="_blank" href="https://plus.google.com/share?url=<%= url_for(:only_path => false) %>"><i class="fa fa-google-plus-square"></i></a>
          <a target="_blank" href="#"><i class="fa fa-envelope-square"></i></a>
        </div>
      </div>
      <div class="store-sort">
        <%= form_tag toko_path, remote: true do %>
        <input type="hidden" name="id" value="<%= @toko.id %>">
        <input class="store-cari" type="text" name="search" placeholder="Masukan kata kunci">
          <select class="store-select-sort" name="sort">
            <option value="created_at desc">Terbaru</option>
            <option value="harga_beli asc">Termurah</option>
            <option value="harga_beli desc">Termahal</option>
            <option value="diskon desc">Diskon</option>
          </select>
          <select class="store-select-page" name="perpage">
            <option value="5">5</option>
            <option value="15">15</option>
            <option value="30">30</option>
            <option value="60">60</option>
            <option value="100">100</option>
          </select>
          <input class="btn btn-danger store-search-btn" type="submit" value="filter" name="filter">
          <span style="margin-left:10px;margin-top:5px;display:inline;" class="loading"></span>
        <% end %>
      </div>

						<div class="kt-list-produk">
              <% @mytoko.each do |produk| %>
							<div class="product-carousel">
								<div class="thumbfoto-produk">
									<a href="<%= produk_path(produk) %>"><img src="<%= produk.foto_produk1.url %>" class="responsiveimg"/></a>
                  <% if produk.harga_diskon %>
									<span class="lagidiskon"><i style="margin-top:4px;margin-right: 0px;" class="fa fa-tags"></i> <%= produk.diskon %>%</span>
                  <% end %>
                  <% if produk.jumlah_grosir1min %>
                          <span class="grosiran"><i style="margin-top:4px;" class="fa fa-lightbulb-o"></i> grosir</span>
                          <% end %>
								</div>
								<a href="<%= produk_path(produk) %>"><h4 class="titleproduk"><%= produk.nama_produk %></h4></a>
								<div class="hargaasli">Rp <%= produk.harga_beli %></div>
							</div>
              <% end %>
						</div>


					<div class="pagingarea">
						<div class="store-halaman">
            <%= will_paginate @mytoko %>
            </div>
						<p class="store-typelight"><%= page_entries_info @mytoko %></p>
					</div>

		</div>
