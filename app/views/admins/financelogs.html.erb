<div class="wrapper">

  <%= render 'admins/topbar' %>
  <!-- Left side column. contains the logo and sidebar -->
  <%= render 'admins/sidebar' %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        User Lists

      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Financial</a></li>
        <li class="active">Logs</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
            <div class="box-header">
              <h3 class="box-title">Financial Logs</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>ID</th>
                  <th>Log</th>
                </tr>
                </thead>
                <tbody>
                  <% @financelog.each do |u| %>
                  <% if u.keterangan.present? %>
                  <tr>
                  <td><%= u.id %></td>
                  <td><span class="label label-danger">KONFIRMASI</span> <%=raw u.keterangan %></td>
                   </tr>
                  <% else %>
                <tr>
                  <td><%= u.id %></td>
                  <td><span class="label label-primary">PENCAIRAN</span> <span class="label label-info">User ID</span> <%= u.user_id %> <span class="label label-info">Name User</span> <%= User.find(u.user_id).namalengkap %> <span class="label label-info">Email User</span> <%= User.find(u.user_id).email %> <span class="label label-info">Nominal</span>  <%= number_to_currency(u.jumlah, locale: :id) %> <span class="label label-info">Waktu</span>  <%= u.created_at.in_time_zone("Jakarta").strftime("%d-%m-%Y %H:%M") %> WIB <span class="label label-info">Status</span> Selesai</td>
                </tr>
                <% end %>
                <% end %>
                </tbody>
                <tfoot>
                <tr>
                  <th>ID</th>
                  <th>Log</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
  </footer>


</div>

<% if notice.to_s.include? "Financelog" %>
<script>
$(function () {
    $.notiny({ text: "<%= notice %>", position: 'right-top' });
  });
</script>
<% end %>

